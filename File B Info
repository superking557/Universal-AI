        <label><input type="checkbox" name="agents" value="Mylo" /> Mylo</label>
        <label><input type="checkbox" name="agents" value="Verity" /> Verity</label>
        <label><input type="checkbox" name="agents" value="Ekon" /> Ekon</label>
      </fieldset>
      <div class="tools">
        <button type="button" onclick="useMic()">ðŸŽ¤ Speak</button>
        <button type="button" onclick="inspire()">ðŸŽ² Inspire Me</button>
      </div>
      <input type="text" id="userInput" placeholder="Ask a question..." required />
      <button type="submit">Send</button>
    </form>
    <div class="chat-box" id="chatBox"></div>
  </main>

  <script>
    const chatBox = document.getElementById("chatBox");
    const input = document.getElementById("userInput");
    const inspirePrompts = [
      "What is the meaning of intelligence?",
      "How is AI used in space exploration?",
      "Whatâ€™s the smartest way to learn programming?",
      "Explain time dilation like Iâ€™m 12.",
      "Will AI surpass human creativity?",
      "What is the future of interstellar trade?"
    ];

    function inspire() {
      const prompt = inspirePrompts[Math.floor(Math.random() * inspirePrompts.length)];
      input.value = prompt;
    }

    function useMic() {
      const recognition = new (window.SpeechRecognition || window.webkitSpeechRecognition)();
      recognition.lang = "en-US";
      recognition.start();
      recognition.onresult = (event) => {
        const transcript = event.results[0][0].transcript;
        input.value = transcript;
      };
    }

    document.getElementById("agentForm").onsubmit = async function (e) {
      e.preventDefault();
      const text = input.value;
      const agents = Array.from(document.querySelectorAll("input[name='agents']:checked")).map(el => el.value);
      input.value = "";
      chatBox.innerHTML += `<div class='message user'>You: ${text}</div>`;
      for (const agent of agents) {
        chatBox.innerHTML += `<div class='message ai'><strong>${agent} is thinking...</strong></div>`;
      }
      chatBox.scrollTop = chatBox.scrollHeight;
    };
  </script>
